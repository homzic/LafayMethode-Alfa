<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor">

    <TextView
        android:id="@+id/textViewFill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/fill_body"
        android:textColor="@color/textColorPrimary"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewFill"
        android:layout_marginTop="20dp"
        android:background="@color/primaryColor"
        android:baselineAligned="false"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="20dp"
            android:src="@drawable/body" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editNeck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Neck"
                android:inputType="numberDecimal"
                android:lines="1"
                android:paddingTop="60dp"
                android:numeric="integer"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:autoText="false"
                android:gravity="center_horizontal"/>

            <EditText
                android:id="@+id/editBiceps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Biceps"
                android:inputType="numberDecimal"
                android:lines="1"
                android:paddingTop="30dp"
                android:numeric="integer"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:autoText="false"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/editChest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Chest"
                android:inputType="numberDecimal"
                android:lines="1"
                android:paddingTop="10dp"
                android:numeric="integer"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:autoText="false"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/editPas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Hip"
                android:inputType="numberDecimal"
                android:lines="1"
                android:paddingTop="10dp"
                android:numeric="integer"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:autoText="false"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/editUda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Thigh"
                android:inputType="numberDecimal"
                android:lines="1"
                android:paddingTop="30dp"
                android:numeric="integer"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:autoText="false"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/editLydki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Calf"
                android:inputType="numberDecimal"
                android:lines="1"
                android:paddingTop="80dp"
                android:numeric="integer"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:autoText="false"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/btnSaveBody"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:background="@color/primaryColorDark"
                android:onClick="saveBody"
                android:text="@string/save"
                android:textColor="@color/primaryColor"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
