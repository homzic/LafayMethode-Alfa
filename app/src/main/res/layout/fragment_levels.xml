                        android:layout_marginRight="20dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@string/level5"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="25sp" />
                </TableRow>

